  <script src="js/main.js"></script>
  <script>
    
    const getCurrentDay = () =>{
            var weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tueday";
            weekday[3] = "Wednesday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday ";

            let currentTime = new Date();
            days= weekday[currentTime.getDay()];
            let day = document.getElementById('day')

            day.innerText = days;
        };
        getCurrentDay();
  </script>
  <script>
    const getCurrentTime = () =>{
            var months = [
                "Jan",
                "Feb",
                "Mar",
                "Apr",
                "May",
                "June",
                "July",
                "Aug",
                "Sep",
                "Oct",
                "Nov",
                "Dec"
            ];
            let now = new Date();
             month = months[now.getMonth() + 1];
             date = now.getDate();

            let today_date = document.getElementById('today_date');
            today_date.innerText = `${date} ${month}`;
    };
    getCurrentTime();
  </script>
